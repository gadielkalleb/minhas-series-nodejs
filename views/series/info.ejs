<% include ../partials/header %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method="post">
              <h2> <%= serie.name %> </h2>
              <div class="form-group">
                <textarea class="form-control" id="comentario" aria-describedby="namelHelp" placeholder="Deixe algum comentario" name="comentario"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
            <% serie.comments.forEach( c => { %>  
            <div class="card"> <%= c %> </div>
            <% }) %>
          </div>
        </div>
      </div>
    </section>

<% include ../partials/footer %>